    "try:\n",
    "    from osgeo import gdal\n",
    "    gdal.AllRegister()\n",
    "    print(f'GDAL loaded with {gdal.GetDriverCount()} drivers')\n",
    "    driver = gdal.GetDriverByName('EOPFZARR')\n",
